{
   "name": "node_ts",
   "version": "1.0.0",
   "main": ".build/index.js",
   "type": "commonjs",
   "husky": {
      "hooks": {
         "pre-commit": "pretty-quick --staged && npm run lint:fix"
      }
   },
   "scripts": {
      "build": "rimraf ./build && npx tsc && npm run copy-files",
      "copy-files": "copyfiles -u 1 \"src/**/*.{crt,pem}\" \"src/.env\" build",
      "start": "npm run build && node ./build/index",
      "format": "npx prettier --write .",
      "dev": "nodemon",
      "lint:fix": "eslint --fix ."
   },
   "keywords": [],
   "author": "",
   "license": "ISC",
   "description": "",
   "devDependencies": {
      "@types/express": "^4.17.21",
      "@types/node": "^20.14.2",
      "@typescript-eslint/eslint-plugin": "^7.14.1",
      "@typescript-eslint/parser": "^7.14.1",
      "copyfiles": "^2.4.1",
      "eslint": "^8.57.0",
      "husky": "^9.0.11",
      "nodemon": "^3.1.3",
      "prettier": "^3.3.2",
      "pretty-quick": "^4.0.0",
      "rimraf": "^5.0.7",
      "tsx": "^4.15.2",
      "typescript": "^5.4.5"
   }
}
